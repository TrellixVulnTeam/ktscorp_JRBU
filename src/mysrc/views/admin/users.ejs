<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">

    <!-- Boxicons CDN Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="css/ustyle.css">
    <title>KTS- Trang quản trị</title>
</head>

<body>
    <%- include('admsidebar.ejs')%>
        <section class="home-section">
            <nav>
                <div class="sidebar-button">
                    <i class='bx bx-menu sidebarBtn'></i>
                </div>
                </div>
                <div class="profile-details">
                    <!--<img src="images/profile.jpg" alt="">-->
                    <span>Xin chào</span>
                    <span class="admin_name">
                        <% if (typeof username !=='undefined' ) { %>
                            <%=username%>
                                <% } %>
                    </span>
                    <!-- <i class='bx bx-chevron-down'></i> -->
                </div>
            </nav>
            <div class="home-content">
                <div class="content-header">
                    QUẢN LÝ USER
                    <a class="btn btn-primary" href="admin/createuser" role="button">TẠO MỚI</a>
                </div>
                <div class="home-content-details box">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">username</th>
                                <th scope="col">Role</th>
                                <th scope="col">Cost Level</th>
                                <th scope="col">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(function(dt,index){ %>
                                <tr>
                                    <th scope="row">
                                        <%=index+1%>
                                    </th>
                                    <td>
                                        <%=dt.userName%>
                                    </td>
                                    <td>
                                        <%=dt.roleID%>
                                    </td>
                                    <td>
                                        <%=dt.costid%>
                                    </td>
                                    <td>
                                        <a href="/" class="text-primary mr-3"><i class='bx bx-edit-alt'></i></a>
                                        <a href="/" class="text-danger"><i class='bx bx-trash'></i></a>
                                    </td>
                                </tr>
                                <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <script>
            let sidebar = document.querySelector(".sidebar");
            let sidebarBtn = document.querySelector(".sidebarBtn");
            sidebarBtn.onclick = function () {
                sidebar.classList.toggle("active");
                if (sidebar.classList.contains("active")) {
                    sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
                } else
                    sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
            }
        </script>

</body>

</html>