<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ĐĂNG NHẬP HỆ THỐNG</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <base href="/">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/user/ustyle.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">
                    <form class="card-body cardbody-color p-lg-5" action="/user/login" method="post">
                        <div class="text-center">
                            <img src="assets/img/logo/Logo_login.png" class="mb-5">
                        </div>
                        <% if (typeof mess !=='undefined' ) { %>
                            <h6 class="text-danger">
                                <%= mess%>
                            </h6>

                            <% } %>

                                <div class="mb-3">
                                    <input type="text" class="form-control" name="username" aria-describedby="emailHelp"
                                        placeholder="User Name">
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control" name="password" placeholder="password"
                                        required>
                                </div>

                                <div class="form-group">
                                    <!-- <label for="remember-me" class="kts-text"><span>Remember me</span> <span><input
                                                id="remember-me" name="remember-me" type="checkbox"></span></label><br> -->
                                    <input type="submit" name="submit" class="col-12 btn kts-btn btn-md"
                                        value="ĐĂNG NHẬP">
                                </div>
                                <div class="row">
                                    <div id="register-link" class="col-6">
                                        <a href="/" class="kts-text"> Trang chủ</a>
                                    </div>
                                    <div class="col-6 text-right">
                                        <a href="register" class="kts-text">Đăng ký</a>
                                    </div>
                                </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- JS here -->
    <!-- All JS Custom Plugins Link Here here -->
    <script src="./assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
    <script src="./assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="./assets/js/popper.min.js"></script>
    <script src="./assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="./assets/js/jquery.slicknav.min.js"></script>
</body>

</html>